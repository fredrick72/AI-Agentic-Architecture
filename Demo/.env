# ============================================
# AI-Agentic Architecture Demo - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Usage: cp .env.example .env

# ============================================
# REQUIRED: OpenAI API Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# Database Configuration (defaults work for Docker Compose)
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=demo_password
POSTGRES_DB=agent_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================
# Redis Configuration (defaults work for Docker Compose)
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# Service URLs (internal Docker network)
# ============================================
LLM_GATEWAY_URL=http://llm-gateway:8002
TOOL_REGISTRY_URL=http://tool-registry:8003
CLARIFICATION_ENGINE_URL=http://clarification-engine:8004

# ============================================
# LLM Gateway Configuration
# ============================================
# Cache TTL in seconds (default: 5 minutes)
CACHE_TTL_SECONDS=300

# Model costs per 1,000 tokens (as of 2024)
# GPT-4 Turbo
GPT4_TURBO_INPUT_COST=0.01
GPT4_TURBO_OUTPUT_COST=0.03

# GPT-3.5 Turbo
GPT35_TURBO_INPUT_COST=0.0005
GPT35_TURBO_OUTPUT_COST=0.0015

# ============================================
# Observability Configuration
# ============================================
PROMETHEUS_ENABLED=true

# Grafana Admin Credentials
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# ============================================
# Frontend Configuration
# ============================================
VITE_API_URL=http://localhost

# ============================================
# Agent Runtime Configuration
# ============================================
# Maximum reasoning iterations before timeout
MAX_REASONING_ITERATIONS=5

# Confidence threshold for clarification (0-100)
CLARIFICATION_THRESHOLD=60

# ============================================
# Optional: Development Settings
# ============================================
# Set to 'development' for verbose logging
ENVIRONMENT=production

# Enable debug mode (more verbose logs)
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
